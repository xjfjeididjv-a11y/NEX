    <script>
        // Données des sujets (exemple étendu)
        const subjectsData = [
            {
                id: 1,
                title: "BAC S 2024 - Mathématiques",
                year: 2024,
                series: "s",
                type: "premier-tour",
                description: "Sujet complet avec corrigés détaillés et méthodes de résolution.",
                exercises: ["Exercice 1 : Algèbre", "Exercice 2 : Analyse", "Exercice 3 : Géométrie"],
                views: 1250,
                downloads: 890,
                rating: 4.8,
                isNew: true
            },
            {
                id: 2,
                title: "BAC ES 2024 - Mathématiques",
                year: 2024,
                series: "es", 
                type: "premier-tour",
                description: "Épreuve adaptée avec focus sur les probabilités et statistiques.",
                exercises: ["Exercice 1 : Graphes", "Exercice 2 : Probabilités", "Exercice 3 : Suites"],
                views: 980,
                downloads: 650,
                rating: 4.6,
                isNew: true
            }
        ];

        // Fonction pour charger les sujets
        function loadSubjects(filter = 'all') {
            const container = document.getElementById('subjectsContainer');
            container.innerHTML = '';

            let filteredSubjects = [...subjectsData];

            // Appliquer les filtres
            if (filter !== 'all') {
                if (['s', 'es', 'l'].includes(filter)) {
                    filteredSubjects = subjectsData.filter(s => s.series === filter);
                } else if (filter === 'recent') {
                    filteredSubjects = subjectsData.filter(s => s.isNew);
                } else if (filter === 'popular') {
                    filteredSubjects = subjectsData.sort((a, b) => b.views - a.views);
                }
            }

            filteredSubjects.forEach(subject => {
                const card = document.createElement('div');
                card.className = 'subject-card';
                card.innerHTML = `
                    ${subject.isNew ? '<div class="card-badge">Nouveau</div>' : ''}
                    <div class="card-header">
                        <h3>${subject.title}</h3>
                    </div>
                    <div class="card-body">
                        <h4>${subject.series.toUpperCase()} - ${subject.year}</h4>
                        <p>${subject.description}</p>
                        <div class="card-meta">
                            <span>👁️ ${subject.views} vues</span> • 
                            <span>⭐ ${subject.rating}/5</span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn" onclick="viewSubject(${subject.id})">Voir le sujet</button>
                        <div class="card-meta">📥 ${subject.downloads} téléchargements</div>
                    </div>
                `;
                container.appendChild(card);
            });
        }

        // Fonction pour voir un sujet
        function viewSubject(id) {
            alert(`Ouverture du sujet ${id} - Fonctionnalité à implémenter`);
            // Ici vous intégrerez l'ouverture du modal avec le sujet
        }

        // Initialisation
        document.addEventListener('DOMContentLoaded', function() {
            loadSubjects();

            // Gestion des filtres
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    loadSubjects(this.dataset.filter);
                });
            });

            // Bouton "Charger plus"
            document.getElementById('loadMore').addEventListener('click', function() {
                alert('Chargement de plus de sujets - Fonctionnalité à implémenter');
            });
        });
    </script>
</body>
</html>
